<Window x:Class="Techmatic.ShortcutCommander.HotkeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Techmatic.ShortcutCommander" Topmost="True" ShowActivated="False" ShowInTaskbar="False"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen" IsHitTestVisible="False" Background="Transparent" AllowsTransparency="True" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <Border CornerRadius="20" Background="#99111111">
            <StackPanel>
                <TextBlock Foreground="White" TextAlignment="Center" Opacity="0.75" Text="Command text here" FontSize="20" Margin="20,20,20,5" Name="ContentBlock" />
                <TextBlock Foreground="White" TextAlignment="Center" Opacity="0.5" Text="Command name here" FontSize="14" Margin="20,5,20,20" Name="NameBlock" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
